# Configuration Django
DJANGO_SECRET_KEY=generate_a_secure_key_here
DEBUG=True
ALLOWED_HOSTS=.localhost,127.0.0.1,[::1],testserver

# Configuration Sentry - Facultatif, laisser vide pour désactiver
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Configuration Whitenoise pour les fichiers statiques
USE_WHITENOISE=False

# Configuration base de données - Par défaut utilise SQLite 
# Décommentez pour utiliser PostgreSQL
# DATABASE_URL=postgres://user:password@localhost:5432/oc_lettings 